            "@components/*": ["./src/components/*"],
            "@common/*": ["./src/common/*"],
            "@layout/*": ["./src/layout/*"],
            "@pages/*": ["./src/pages/*"],
            "@styles/*": ["./src/styles/*"],
            "@utils/*": ["./src/utils/*"],
            "@hooks/*": ["./src/hooks/*"],
